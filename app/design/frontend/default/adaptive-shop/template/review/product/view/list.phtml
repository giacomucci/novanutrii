<div id="colunas12" class="product-info no-bottom">
<?php $_items = $this->getReviewsCollection()->getItems();?>
<div class="box-collateral box-reviews" id="customer-reviews">
    <?php if (count($_items)):?>
    	<h3 class="titleBox"><span><strong><?php echo $this->__('Customer Reviews') ?></strong></span></h3><br />
        <?php echo $this->getChildHtml('toolbar') ?>
        <dl>
        <?php foreach ($_items as $_review):?>
            <dd>
            	<span class="cor td-u"><?php echo $this->escapeHtml($_review->getTitle()) ?></span> <span class="fs-12"><?php echo $this->__('- comentado por %s', $this->escapeHtml($_review->getNickname())) ?> <?php echo $this->__('em %s.', $this->formatDate($_review->getCreatedAt()), 'long') ?></span>
            	<br />
                <?php $_votes = $_review->getRatingVotes(); ?>
                <?php if (count($_votes)): ?>
                <table class="ratings-table">
                    <col width="1" />
                    <col />
                    <tbody>
                        <?php foreach ($_votes as $_vote): ?>
                        <tr>
                            <th><?php echo $this->escapeHtml($_vote->getRatingCode()) ?>&nbsp;</th>
                            <td>
                                <div class="rating-box">
                                    <div class="rating" style="width:<?php echo $_vote->getPercent() ?>%;"></div>
                                </div>
                            </td>
                        </tr>
                        <?php endforeach; ?>
                    </tbody>
                </table>
                <?php endif; ?>
                <span><?php echo nl2br($this->escapeHtml($_review->getDetail())) ?></span>
                <br class="clear" /><br />
            </dd>
        <?php endforeach; ?>
        </dl>
        <?php echo $this->getChildHtml('toolbar') ?>
    <?php endif;?>
    <br />
</div>
</div>
<div id="anchor-f" class="f-l d-ib">&nbsp;</div>
<?php echo $this->getChildHtml('review_form') ?>
